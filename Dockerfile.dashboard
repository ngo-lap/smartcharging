# filepath: Dockerfile.dashboard
FROM python:3.11
WORKDIR /app
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt
COPY core/dashboard /app/core/dashboard
COPY core/api /app/core/api
COPY core/planner /app/core/planner
COPY core/utility /app/core/utility
EXPOSE 8050
CMD ["python", "-m", "core.dashboard.main"]