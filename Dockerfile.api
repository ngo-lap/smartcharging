# filepath: Dockerfile.api
FROM python:3.11
WORKDIR /app
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt
COPY core/api /app/core/api
COPY core/planner /app/core/planner
COPY core/utility /app/core/utility
EXPOSE 8000
CMD ["uvicorn", "core.api.main:app", "--host", "0.0.0.0", "--port", "8000"]